arxivId = {arXiv:1208.1264v3},
author = {Karpenka, N V and Feroz, F and Hobson, M P},
eprint = {arXiv:1208.1264v3},
file = {:Users/szymon/Library/Application Support/Mendeley Desktop/Downloaded/Karpenka, Feroz, Hobson - 2012 - A simple and robust method for automated photometric classification of supernovae using neural networks.pdf:pdf},
journal = {Mon. Not. R. Astron. Soc},
keywords = {data analysis – methods,general,methods,statistical – supernovae},
pages = {1--8},
title = {{A simple and robust method for automated photometric classification of supernovae using neural networks}},
