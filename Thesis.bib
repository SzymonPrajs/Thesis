file = {:Users/szymon/Library/Application Support/Mendeley Desktop/Downloaded/Margalit et al. - 2017 - The GRB-SLSN Connection mis-aligned magnetars, weak jet emergence, and observational signatures.pdf:pdf},
journal = {MNRAS},
keywords = {general – gamma-ray burst,general – stars,individual (LSQ14bdq),jets – stars,neutron – supernovae,supernovae},
pages = {1--17},
title = {{The GRB-SLSN Connection: mis-aligned magnetars, weak jet emergence, and observational signatures}},
